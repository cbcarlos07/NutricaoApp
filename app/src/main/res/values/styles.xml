<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textColorHighlight">@color/colorCorpo</item>

    </style>
    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/colorCorpo</item>
    </style>

    <style name="botaoPadrao" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDarker</item>
        <item name="colorControlHighlight">@color/colorPrimary</item> <!-- mudar de cor ao clicar -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="botaoCancelar" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorNormalAgendar</item>
        <item name="colorControlHighlight">@color/colorIcone</item> <!-- mudar de cor ao clicar -->
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="botaoAgendar" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorNormalCancelar</item>
        <item name="colorControlHighlight">@color/colorControlHighlightCancelar</item> <!-- mudar de cor ao clicar -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorNormalAgendar</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorNormalCancelar</item>
        <!-- Used for the background -->
        <item name="android:background">@color/colorAccent</item>
    </style>

</resources>
